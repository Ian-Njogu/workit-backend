{
  "info": {
    "name": "JobBoard Backend API",
    "description": "Complete API collection for JobBoard backend testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"client@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access);",
                  "    pm.collectionVariables.set('refresh_token', response.refresh);",
                  "    console.log('Tokens saved:', response.access, response.refresh);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "Workers",
      "item": [
        {
          "name": "List Workers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/workers/?category=Web Development&location=Remote&page=1&page_size=10",
              "host": ["{{base_url}}"],
              "path": ["api", "workers", ""],
              "query": [
                {
                  "key": "category",
                  "value": "Web Development"
                },
                {
                  "key": "location",
                  "value": "Remote"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Worker Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/workers/1/",
              "host": ["{{base_url}}"],
              "path": ["api", "workers", "1", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Create Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Website Development\",\n  \"category\": \"Web Development\",\n  \"description\": \"Need a modern website built with React\",\n  \"location\": \"Remote\",\n  \"budget\": \"5000.00\",\n  \"deadline\": \"2024-03-01\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/jobs/",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", ""]
            }
          }
        },
        {
          "name": "List Jobs (Client)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/jobs/?client_id=1",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", ""],
              "query": [
                {
                  "key": "client_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Job Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/jobs/1/",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "1", ""]
            }
          }
        },
        {
          "name": "Update Job Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"accepted\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/jobs/1/",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "1", ""]
            }
          }
        },
        {
          "name": "Job Feed",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/jobs/feed/?category=Web Development&location=Remote",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "feed", ""],
              "query": [
                {
                  "key": "category",
                  "value": "Web Development"
                },
                {
                  "key": "location",
                  "value": "Remote"
                }
              ]
            }
          }
        },
        {
          "name": "Apply to Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"I can help with your website development project\",\n  \"quote\": \"4500.00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/jobs/1/applications/",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "1", "applications", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Applications",
      "item": [
        {
          "name": "List Applications (Client)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/applications/?client_id=1",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", ""],
              "query": [
                {
                  "key": "client_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "List Applications (Job)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/applications/?job_id=1",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", ""],
              "query": [
                {
                  "key": "job_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Application Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/applications/1/",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "1", ""]
            }
          }
        },
        {
          "name": "Accept Application",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/applications/1/accept/",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "1", "accept", ""]
            }
          }
        },
        {
          "name": "Reject Application",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/applications/1/reject/",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "1", "reject", ""]
            }
          }
        }
      ]
    }
  ]
}
